---
import "../styles/index.css";

type Props = {
  class?: string;
  name: string;
  href: string;
  isSelected: boolean;
};

const { class: className, name, href, isSelected } = Astro.props;
---

<a href={href}>
  <div
    class={`${isSelected ? "font-bold" : ""} text-(--dark-blue) 
    hover:text-(--light-gray) ${className}`}
  >
    {name}
  </div>
</a>
