---
type Props = {
  label: string;
  class?: string;
};

const { class: className = "", label } = Astro.props;
---

<span
  class=`rounded-3xl border-1 border-(--dark-gray) bg-(color:--light-gray) px-2 py-1 font-(family-name:--secondary-font) text-[10pt] font-bold text-white duration-500 hover:scale-115 ${className}`
  data-pagefind-filter=`tag:${label}`
>
  {label}
</span>
