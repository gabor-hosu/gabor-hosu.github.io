---
import { getCollection } from "astro:content";
import BasePage from "../../../layouts/BasePage.astro";
import PreviewList from "../../../components/preview-list/PreviewList.astro";

const numOfPostsPerPage = 5;

// static paths generation for "projects/page/{pageNum}" pages, for paginations
export const getStaticPaths = async () => {
  const numOfPostsPerPage = 5;
  const projectsEntries = await getCollection("projects");
  const numOfPages = Math.ceil(projectsEntries.length / numOfPostsPerPage);
  const paths = Array.from({ length: numOfPages }, (_, i) => {
    return {
      params: {
        pageNum: String(i + 1),
      },
      props: {
        pageNum: i + 1,
      },
    };
  });
  return paths;
};

type Props = {
  pageNum: number;
};

const { pageNum } = Astro.props;
---

<BasePage title="Projektek">
  <PreviewList
    collectionName="projects"
    pageNumber={pageNum}
    numOfPostsPerPage={numOfPostsPerPage}
  />
</BasePage>
